@model IEnumerable<Chess.Atomic.Crawling.Models.ViewModels.StatisticsModel>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.raiting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lichessCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.localCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.percentage)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.raiting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lichessCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.localCount)
            </td>
            <td>
                @Html.Label("label", item.percentage + "%", new { @class = "percentage", data_player = @item.name })
            </td>
            <td>
                @if (item.raiting > 0)
                {
                    <input type="button" class="start" value="start" data-player=@item.name />
                }
                @*@Html.ActionLink("Start", "ParseOnePlayer", "GameMoves", new { playerId = item.name }, null)

                @Ajax.ActionLink("Start", "ParseOnePlayer", "GameMoves", new { playerId = item.name }, new AjaxOptions {  }, null)*@
            </td>
            @*<td>
                @Html.TextBox("text", 0, new { @class = "progress", data_player = @item.name })

                @Html.Label("label", item.localCount + " out of " + item.lichessCount + " (" + ((item.lichessCount > 0)? item.localCount/item.lichessCount : 0) + "%)")
            </td>*@
        </tr>
    }
    
    </table>
</body>
</html>


@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.signalR-2.2.1.js")
    @Scripts.Render("~/signalr/hubs")
    @Scripts.Render("~/Scripts/SignalR/progress.js")
}